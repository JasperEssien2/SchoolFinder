                        android:src="@drawable/place_holder"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/view_school_owner"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:riv_border_color="@color/colorCyan200"
                        app:riv_border_width="2dp"
                        app:riv_corner_radius="10dp" />

                    <View
                        android:id="@+id/view_school_owner"
                        android:layout_width="3dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:background="#EEEEEE"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/school_detail_owner_header"
                        style="@style/StyleSchoolDetailHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="32dp"
                        android:text="@string/school_detail_about_owner"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/school_detail_owner_details_name"
                        style="@style/StyleSchoolDetailsText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="school_detail_owner_details_biography"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/school_detail_owner_header"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="Jasper Essien" />

                    <TextView
                        android:id="@+id/school_detail_owner_details_biography"
                        style="@style/StyleSchoolDetailsText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/school_detail_owner_details_name"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="Was born in 1990, schooled under Alexander the great, won the\nbest stupidness in 1900 in the womb.. hollup what am i saying?" />

                    <android.support.constraint.Guideline
                        android:id="@+id/guideline5"
